<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nume_produs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nume Produs"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/produs_imagine"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/nume_produs"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/produs_descriere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriere produs"
            android:layout_below="@+id/produs_pret"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/produs_pret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pret"
            android:layout_below="@+id/produs_imagine"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />


        
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>