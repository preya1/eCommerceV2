<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setari"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.setari.SetariFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_setari_bara"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/inchide_setari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inchide"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/actualizeaza_setari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizeaza"
                    android:layout_marginRight="13dp"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        card_view:cardCornerRadius="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        card_view:cardPreventCornerOverlap="false"
        >

        <ImageView
            android:id="@+id/utilizator_poza"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/profile"

            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/schimbare_profil_imagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginRight="10dp"
        android:text="Schimba poza"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/setare_numar_telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schimbare_profil_imagine"
        android:hint="Telefon"
        android:layout_margin="15dp"
        android:padding="10dp"
        />


    <EditText
        android:id="@+id/setare_nume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setare_numar_telefon"
        android:hint="Nume"
        android:layout_margin="15dp"
        android:padding="10dp"
        />


    <EditText
        android:id="@+id/setare_adresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setare_nume"
        android:hint="Adresa"
        android:layout_margin="15dp"
        android:padding="10dp"
        />

</RelativeLayout>